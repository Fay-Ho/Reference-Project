<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weather_fragment">

    <fragment
        android:id="@+id/weather_fragment"
        android:name="xyz.fay.reference.feature.weather.WeatherFragment"
        tools:layout="@layout/weather_fragment">

        <action
            android:id="@+id/action_weather_fragment_to_settings_fragment"
            app:destination="@id/settings_fragment" />

        <action
            android:id="@+id/action_weather_fragment_to_city_fragment"
            app:destination="@id/city_fragment" />

    </fragment>

    <fragment
        android:id="@+id/city_fragment"
        android:name="xyz.fay.reference.feature.city.CityFragment"
        tools:layout="@layout/city_fragment">
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="xyz.fay.reference.feature.settings.SettingsFragment"
        tools:layout="@layout/settings_fragment">
    </fragment>

    <fragment
        android:id="@+id/user_fragment"
        android:name="xyz.fay.reference.feature.user.UserFragment"
        tools:layout="@layout/user_fragment">
    </fragment>

</navigation>